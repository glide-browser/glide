do_install() {
	local package_location="usr/lib/$pkgname" item

	vmkdir usr/share/applications
	# TODO
	# vcopy glide-browser.desktop /usr/share/applications/

	vmkdir ${package_location}

	for item in *; do
	  vcopy "${item}" "${package_location}"
	done

	vmkdir usr/bin
	# TODO: should it be glide-browser?
	ln -sfr $DESTDIR/${package_location}/glide $DESTDIR/usr/bin/glide
}
