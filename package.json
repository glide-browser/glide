{
  "name": "glide",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "bootstrap": "bash ./scripts/bootstrap.sh",

    "fmt": "dprint fmt",
    "fmt:check": "dprint check",

    "dev": "pnpm tsn scripts/dev.mts --watch",
    "dev:docs": "pnpm tsn scripts/watch-docs.mts --watch",
    "dev:once": "pnpm tsn scripts/dev.mts",

    "build": "pnpm glider build",
    "package": "pnpm glider package",

    "launch": "pnpm glider run",
    "mach": "./engine/mach",

    "bundle": "bash ./scripts/bundle.sh",

    "build:docs": "pnpm build:docs:html --symlink=false && pnpm build:docs:api && pnpm build:docs:assets && pnpm build:docs:index && pnpm build:docs:assets",
    "build:docs:html": "pnpm tsn scripts/build-docs.mts",
    "build:docs:index": "bash ./scripts/build-docs-index.sh",
    "build:docs:api": "pnpm tsn ./scripts/build-api-reference.mts",
    "build:docs:assets": "pnpm tsn ./scripts/docs-asset-hashes.mts",
    "build:types": "bash ./scripts/generate-types.sh",
    "build:ts": "pnpm tsn scripts/build-ts.mts",
    "build:js": "pnpm tsn ./scripts/generate-js.mts src/glide/browser/base/content/sandbox-properties.mjs",

    "lint": "./scripts/lint.sh",
    "fix": "pnpm fmt",

    "firefox:download": "pnpm tsn scripts/firefox/download.mts",
    "firefox:version": "pnpm tsn scripts/firefox/version.mts",

    "check:license": "pnpm tsn scripts/firefox/license-check.mts",
    "fix:license": "pnpm tsn scripts/firefox/license-check.mts --fix",

    "tsc": "./scripts/check-types.sh",
    "tsc:browser": "tsc -p tsconfig.check.json",
    "tsc:scripts": "tsc -p scripts/tsconfig.json",
    "tsc:config": "tsc -p src/glide/browser/base/content/test/config/types/tsconfig.json",
    "tsn": "node --no-warnings --experimental-strip-types \"$@\"",
    "test": "pnpm mach test glide"
  },
  "keywords": [],
  "author": "",
  "license": "MPL-2.0",
  "dependencies": {
    "ts-blank-space": "^0.6.2",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@glide-browser/glider": "github:glide-browser/glider",
    "@markdoc/markdoc": "^0.5.4",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/hast": "^3.0.4",
    "@types/node": "^24.3.0",
    "@types/webidl2": "^24.4.3",
    "chalk": "^5.6.0",
    "chokidar": "^4.0.3",
    "dprint": "^0.50.1",
    "dts-bundle-generator": "^9.5.1",
    "esbuild": "^0.25.9",
    "execa": "^9.6.0",
    "fast-check": "^4.3.0",
    "html-assets-hash": "^1.0.5",
    "meow": "^13.2.0",
    "p-queue": "^8.1.0",
    "pagefind": "^1.4.0",
    "shiki": "^3.12.2",
    "ts-morph": "^27.0.0",
    "type-fest": "^4.41.0",
    "webextension-polyfill": "github:glide-browser/webextension-types",
    "webidl2": "^24.5.0"
  },
  "packageManager": "pnpm@10.11.0",
  "private": true
}
